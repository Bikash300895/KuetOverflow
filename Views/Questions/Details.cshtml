@model KuetOverflow.Models.SchoolViewModels.QuestionViewModel

@{
    ViewData["Title"] = "Kuet Overflow";
    Layout = "_StudentLayout";
}


<div>
    <h2>@Model.Question.Title</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Question.CourseID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Question.CourseID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Question.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Question.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Question.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Question.Description)
        </dd>

        <dt>
            Asked by: 
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Question.UserName)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Question.DateTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Question.DateTime)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Question.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<h2>Answers</h2>

@foreach (var answer in Model.Answers)
{
    <br/>
    <hr/>
    <div>
        <h4>@answer.UserName</h4>
        <p>@answer.Title</p>
    </div>
}



<form asp-controller="Answers" asp-action="CreateByUser">

        <hr />
        <h2>Add an answer</h2>
            
        <textarea rows="6" cols="150" name="Title"></textarea>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Add Answer" class="btn btn-default"/>
            </div>
        </div>

</form>